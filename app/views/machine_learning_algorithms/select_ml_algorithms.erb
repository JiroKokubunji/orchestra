<% if notice %>
  <p id="notice"><%= notice %></p>
<% end %>
<h1>select machine learning algorithms</h1>

<div class="row">
  <div class="col">
    <%= form_with url: ml_training_path do |form| %>
    <%= form.hidden_field :project_datum_id, value: @project_datum.id %>
    <table class="table table-hover">
      <thead>
        <tr>
          <th></th>
          <th>name</th>
          <th>parameters</th>
        </tr>
      </thead>
      <tbody>
        <% @ml_algorithms.each do |ml_algorithm| %>
          <tr>
            <td><%= check_box_tag "ml_algorithms[id][]", ml_algorithm.id %></td>
            <td><%= ml_algorithm.class_name %></td>
            <td>T.B.Developed</td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= form.submit "start", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
