<% if @project_datum.errors.any? %>
  <div class="col col-lg-4 offset-lg-4 error-messages-container">
    <p><%= pluralize(@project_datum.errors.count, "error") %> prohibited this project datum from being saved:</p>
    <ul>
    <% @project_datum.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>


<div class="row">
  <div class="col col-lg-4">
    <div class="new_project_form">
    <%= form_with(model: [@project, @project_datum], local: true) do |form| %>
    <div class="form-group">
      <div class="col">
        <%= form.label 'name' %>
        <%= form.text_field :name, value: "project data", class: 'form-control' %>
      </div>
      <div class="col">
        <%= form.label 'description' %>
        <%= form.text_field :description, class: 'form-control' %>
      </div>
      <div class="col">
        <%= form.label 'file' %>
        <%= form.file_field :upload_file, :id => 'upload_file' %>
      </div>
      <div class="col">
        <%= form.submit "Upload" %>
      </div>
    <% end %>
    </div>
  </div>
</div>
